<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#53599a">

    <TextView android:text="CAST CHESS" android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="#ff5555"
        android:textSize="40dp"
        android:textStyle="bold"
        android:visibility="visible"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Up Arrow"
        android:scaleType="fitXY"
        android:background="@null"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/uparrow" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Left Button"
        android:background="@null"
        android:id="@+id/button2"
        android:scaleType="fitXY"
        android:src="@drawable/leftarrow"
        android:layout_alignTop="@+id/button5"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Right Arrow"
        android:id="@+id/button3"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/rightarrow"
        android:layout_alignTop="@+id/button5"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Down Arrow"
        android:id="@+id/button4"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/downarrow"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Center Select"
        android:background="@null"
        android:scaleType="fitXY"
        android:id="@+id/button5"
        android:src="@drawable/center"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="Menu"
        android:background="@null"
        android:id="@+id/button6"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:layout_toEndOf="@+id/button3"
        android:src="@drawable/option"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="false" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:text="Connect To ChromeCast"
        android:id="@+id/button7"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:scaleType="fitXY"
        android:layout_toStartOf="@+id/button2"
        android:src="@drawable/chromecastconnect"
        android:layout_alignBottom="@+id/button6"
        android:layout_toLeftOf="@+id/button2" />

</RelativeLayout>
